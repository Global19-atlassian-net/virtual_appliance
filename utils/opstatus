#!/bin/bash
# Ontoportal daemon servides status

services='
4s-boss.service
4s-backend.service
4s-httpd.service
tomcat.service
redis-server-goo.service
redis-server-http.service
redis-server-persistent.service
mgrep.service
memcached.service
solr.service
ncbo_cron.service
unicorn.service
nginx.service
httpd.service
'

NC=$(tput sgr0)
RED=$(tput setaf 1)
GRN=$(tput setaf 2)

for service in $services; do
  isactive=$(/bin/systemctl is-active $service)
  STATUS=$((STATUS + $?))
  if [[ "$isactive" == 'active' ]]; then
     COLOR=$GRN
  else
     COLOR=$RED
  fi
  printf "%*s %b\n" -35 "${service}" "${COLOR}${isactive}${NC}"
done
exit $STATUS
